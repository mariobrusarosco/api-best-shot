{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ES2017", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceRoot": "/",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["src/types/express/index.d.ts", "drizzle.config.ts", "global.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "replacements": [
    {
      "pattern": "@/domains/(.*)/routes",
      "replacement": "./src/domains/$1/routes"
    }
  ]
}
