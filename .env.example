# ========================================
# Local Development Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
PORT=9090
API_VERSION=/v2
API_DOMAIN=localhost:9090

# ========================================
# Database Configuration
# ========================================
# For local development, use your local PostgreSQL connection
DB_STRING_CONNECTION=postgresql://user:password@localhost:5432/bestshot_db
REDIS_URL=redis://localhost:6379

# ========================================
# Security & Authentication
# ========================================
JWT_SECRET=<your-jwt-secret-key>
MEMBER_PUBLIC_ID_COOKIE=member_public_id
ACCESS_CONTROL_ALLOW_ORIGIN=http://localhost:5173
INTERNAL_SERVICE_TOKEN=<your-internal-service-token>

# ========================================
# AWS Configuration
# ========================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<your-aws-account-id>
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_BUCKET_NAME=<your-s3-bucket-name>
AWS_CLOUDFRONT_URL=<your-cloudfront-url>

# ========================================
# Monitoring & Error Tracking
# ========================================
SENTRY_DSN=<your-sentry-dsn>

# ========================================
# Data Provider Cookies (Optional for local)
# ========================================
DATA_PROVIDER_COOKIE_PRODUCTION=<optional-production-cookie>
DATA_PROVIDER_COOKIE_DEMO=<optional-demo-cookie>
