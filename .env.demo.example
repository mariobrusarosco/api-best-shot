# ========================================
# Demo Environment Variables
# ========================================
# Copy this file to .env.demo and fill in your actual values
# Run with: yarn dev-demo

# ========================================
# Application Configuration
# ========================================
NODE_ENV=demo
PORT=9090
API_VERSION=/v2
API_DOMAIN=api-best-shot-demo.mariobrusarosco.com

# ========================================
# Database Configuration
# ========================================
# For demo, this should point to your remote demo database
DB_STRING_CONNECTION=<your-demo-database-connection-string>
# Alternative: Use environment-specific connection
# DB_STRING_CONNECTION_DEMO=<your-demo-database-connection-string>

# ========================================
# Security & Authentication
# ========================================
JWT_SECRET=<your-demo-jwt-secret>
MEMBER_PUBLIC_ID_COOKIE=member_public_id
ACCESS_CONTROL_ALLOW_ORIGIN=https://demo.mariobrusarosco.com
INTERNAL_SERVICE_TOKEN=<your-demo-internal-service-token>

# ========================================
# AWS Configuration
# ========================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<your-aws-account-id>
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_BUCKET_NAME=<your-demo-s3-bucket-name>
AWS_CLOUDFRONT_URL=<your-cloudfront-url>

# ========================================
# Monitoring & Error Tracking
# ========================================
SENTRY_DSN=<your-demo-sentry-dsn>

# ========================================
# Data Provider Cookies
# ========================================
DATA_PROVIDER_COOKIE_PRODUCTION=<your-production-cookie>
DATA_PROVIDER_COOKIE_DEMO=<your-demo-cookie>
