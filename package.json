{
  "name": "api-best-shot",
  "version": "0.7.2",
  "description": "API - Best Shot",
  "volta": {
    "node": "22.17.1"
  },
  "packageManager": "yarn@3.8.7",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts 2>&1 | tee dev.log",
    "dev:no-logs": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts",
    "dev:full": "docker compose up -d postgres && concurrently --names \"API,DATABASE,FRONTEND\" --prefix-colors \"cyan,green,magenta\" --kill-others \"yarn dev\" \"yarn db:studio\" \"cd ../best-shot && yarn dev\"",
    "dev:status": "docker compose ps && volta list",
    "dev:logs": "tail -f ./logs/api-dev.log",
    "scheduler": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/scheduler/cron-jobs.ts",
    "scheduler:prod": "node ./dist/src/scheduler/cron-jobs.js",
    "db:connect": "docker compose exec postgres psql -U ${DB_USER} -d ${DB_NAME}",
    "db:logs": "docker compose logs -f postgres",
    "db:reset": "docker compose down postgres -v && docker compose up -d postgres",
    "dev-demo": "ENV_PATH=.env.demo ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "build-demo": "rimraf ./dist && tsc && tsc-alias && yarn sentry:sourcemaps",
    "serve-demo": "ENV_PATH=.env.demo node -r dotenv/config ./dist/src/index.js",
    "dev-staging": "ENV_PATH=.env.staging ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "build-staging": "rimraf ./dist && tsc && tsc-alias && yarn sentry:sourcemaps",
    "serve-staging": "ENV_PATH=.env.staging node -r dotenv/config ./dist/src/index.js",
    "dev-prod": "ENV_PATH=.env.production ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "build-prod": "rimraf ./dist && tsc && tsc-alias && yarn sentry:sourcemaps",
    "serve-prod": "ENV_PATH=.env.production node -r dotenv/config ./dist/src/index.js",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org mario-79 --project api-best-shot ./dist && sentry-cli sourcemaps upload --org mario-79 --project api-best-shot ./dist",
    "compile": "tsc --noEmit",
    "db:seed": "yarn tsx scripts/run-seeds.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "hydrate:scoreboard": "ts-node -r tsconfig-paths/register scripts/hydrate-redis.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "validate:yarn": "./scripts/validate-yarn-version.sh"
  },
  "author": "Mario Brusarosco",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariobrusarosco/api-best-shot.git"
  },
  "bugs": {
    "url": "https://github.com/mariobrusarosco/api-best-shot/issues"
  },
  "homepage": "https://github.com/mariobrusarosco/api-best-shot/#readme",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{test,spec}.{ts,tsx}": [
      "echo 'Skipping test files'"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.703.0",
    "@sentry/cli": "^2.39.1",
    "@sentry/node": "^8.47.0",
    "@sentry/profiling-node": "^8.47.0",
    "@types/lodash": "^4.17.13",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.0.2",
    "drizzle-orm": "^0.32.0",
    "express": "^4.18.1",
    "file-type": "^19.6.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "node-cron": "^4.2.1",
    "openai": "^4.89.0",
    "pg-boss": "^12.5.4",
    "picocolors": "^1.1.1",
    "playwright": "1.55.0",
    "postgres": "^3.4.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@playwright/test": "1.55.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.13",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.12.8",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "hbs": "^4.2.0",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "15.2.0",
    "nodemon": "^2.0.19",
    "prettier": "3.2.5",
    "rimraf": "^3.0.2",
    "supabase": "^2.23.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^4.8.2"
  }
}
