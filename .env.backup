# Database Configuration
DB_USER=dev_user         # Database username
DB_PASSWORD=dev_pass  # Database password
DB_NAME=bestshot_dev         # Database name
DB_HOST=postgres         # Database host
DB_PORT=5432         # Database port
DB_CREDENTIALS="postgresql://dev_user:dev_pass@postgres:5432/bestshot_dev"  # For Docker services
DB_STRING_CONNECTION="postgresql://dev_user:dev_pass@postgres:5432/bestshot_dev"  # For Docker connectivity
DB_STRING_CONNECTION_LOCAL="postgresql://dev_user:dev_pass@localhost:5432/bestshot_dev"  # For local development tools

# Application
NODE_ENV=development       # Environment (development, demo, production)
PORT=9090               # Application port

# Security (Required)
JWT_SECRET="1234567890"                        # Secret for JWT signing
MEMBER_PUBLIC_ID_COOKIE="best-shot-auth"          # Cookie name for member ID
ACCESS_CONTROL_ALLOW_ORIGIN="http://localhost:5173"     # CORS origin

# AWS Configuration (Required for AWS features)
AWS_ACCESS_KEY_ID="AKIAX567890123456789"                # AWS access key
AWS_SECRET_ACCESS_KEY="1234567890123456789012345678901234567890"            # AWS secret key
AWS_BUCKET_NAME="best-shot-dev"                  # S3 bucket name

# Monitoring (Required for Sentry)
SENTRY_DSN="https://sentry.io/api/1234567890/sentry/api/1234567890/1234567890"                       # Sentry Data Source Name

# Sentry Configuration (Required for Sentry)
SENTRY_AUTH_TOKEN="1234567890123456789012345678901234567890"          # Sentry authentication token
SENTRY_ORG="best-shot-dev"                        # Sentry organization
SENTRY_PROJECT="best-shot-dev"                # Sentry project

