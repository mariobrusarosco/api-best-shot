# ========================================
# Production Environment Variables
# ========================================
# Copy this file to .env.production and fill in your actual values
# Run with: yarn dev-prod

# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=9090
API_VERSION=/v2
API_DOMAIN=api.bestshot.app

# ========================================
# Database Configuration
# ========================================
# For production, this should point to your production database
DB_STRING_CONNECTION=<your-production-database-connection-string>
# Alternative: Use environment-specific connection
# DB_STRING_CONNECTION_PRODUCTION=<your-production-database-connection-string>

# ========================================
# Security & Authentication
# ========================================
JWT_SECRET=<your-production-jwt-secret>
MEMBER_PUBLIC_ID_COOKIE=member_public_id
ACCESS_CONTROL_ALLOW_ORIGIN=https://bestshot.app
INTERNAL_SERVICE_TOKEN=<your-production-internal-service-token>

# ========================================
# AWS Configuration
# ========================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<your-aws-account-id>
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_BUCKET_NAME=<your-production-s3-bucket-name>
AWS_CLOUDFRONT_URL=<your-cloudfront-url>

# ========================================
# Monitoring & Error Tracking
# ========================================
SENTRY_DSN=<your-production-sentry-dsn>

# ========================================
# Data Provider Cookies
# ========================================
DATA_PROVIDER_COOKIE_PRODUCTION=<your-production-cookie>
DATA_PROVIDER_COOKIE_DEMO=<your-demo-cookie>
